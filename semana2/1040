#include <stdio.h>

int main(void) {
  double N1, N2, N3, N4, media, exame, mediafinal;

scanf("%lf %lf %lf %lf", &N1, &N2, &N3, &N4);

media= ((N1*2.0) + (N2*3.0) + (N3*4.0) + (N4*1.0))/10.0;
printf("Media: %.1lf\n", media);
 
if(media>=7.0){
  printf("Aluno aprovado.\n");
}
else if(media<5.0){
  printf("Aluno reprovado.\n");
}
else if(media>=5.0 && media<=6.9){
printf("Aluno em exame.\n");
scanf("%lf", &exame);
printf("Nota do exame: %.1lf\n", exame);
mediafinal= media+mediafinal/2.0; 
  if(mediafinal>=5.0){
  printf("Aluno aprovado.\n Media final: %.1lf\n", mediafinal);
} else if(mediafinal<= 4.9){
  printf("Aluno reprovado.\n Media final: %.1lf\n", mediafinal);
} }
return 0;
}
